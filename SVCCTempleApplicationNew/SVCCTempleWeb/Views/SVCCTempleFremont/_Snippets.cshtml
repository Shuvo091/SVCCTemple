@model SVCCTempleWeb.Models.SnippetsModel
@{ 
    string currentDateTime = DateTime.Now.ToString("yyyyMMddHHmmss");
}
<style>
    .divClass {
        background-image: url('@ApplicationInstance.Application["BaseURL"]Images/DBD.jpg?@(currentDateTime)');
        font-family: Arial;
        font-size: 18px;
        line-height: 2.7;
        text-align: left;
        width: 819px;
    }
</style>
<div class="col-md-9" style="font-family: Arial; font-size: 15px; text-align: left; width: 819px;">
    @{
        int i, j, pageNum = 0, pageNumStart = -14, pageNumFinish = 0;
        for (i = 0; i < 3; i++)
        {
            pageNumStart = pageNumStart + 15;
            pageNumFinish = pageNumFinish + 15;
            <select class="form-control" id="snippetsList@(i)" onchange="javascript: return snippetsList_onclick('snippetsList@(i)');" style="float: left; padding-right: 3px; width: 27%;">
                <option value="">--- #@(pageNumStart) - #@(pageNumFinish) ---</option>
                @for (j = 0; j < 15; j++)
                {
                    pageNum++;
                    <option value="@pageNum">Bhakti Snippet #@pageNum</option>
                }
            </select>
        }
        <br style="clear: both;" />
        for (; i < 6; i++)
        {
            pageNumStart = pageNumStart + 15;
            pageNumFinish = pageNumFinish + 15;
            <select class="form-control" id="snippetsList@(i)" onchange="javascript: return snippetsList_onclick('snippetsList@(i)');" style="float: left; padding-right: 3px; width: 27%;">
                <option value="">--- #@(pageNumStart) - #@(pageNumFinish) ---</option>
                @for (j = 0; j < 15; j++)
                {
                    pageNum++;
                    <option value="@pageNum">Bhakti Snippet #@pageNum</option>
                }
            </select>
        }
        <br style="clear: both;" />
        for (; i < 9; i++)
        {
            pageNumStart = pageNumStart + 15;
            pageNumFinish = pageNumFinish + 15;
            <select class="form-control" id="snippetsList@(i)" onchange="javascript: return snippetsList_onclick('snippetsList@(i)');" style="float: left; padding-right: 3px; width: 27%;">
                <option value="">--- #@(pageNumStart) - #@(pageNumFinish) ---</option>
                @for (j = 0; j < 15; j++)
                {
                    pageNum++;
                    <option value="@pageNum">Bhakti Snippet #@pageNum</option>
                }
            </select>
        }
    }
    <br style="clear: both;" />
    <div style="float: right;"><a href="javascript: void(0);" style="font-weight: 900; text-decoration: underline;">Next</a></div>
    <div style="float: left;"><a href="javascript: void(0);" style="font-weight: 900; text-decoration: underline;">Prev</a></div>
    <br style="clear: both;" />
@*</div>
<div class="col-md-9" style="font-family: Arial; font-size: 15px; text-align: left; width: 720px;">*@
    @Html.Raw(Model.SnippetsHtmlData)
</div>
<br style="clear: both;" />
<script type="text/javascript">
    function snippetsList_onclick(documentElementId) {
        var snippetsId = document.getElementById(documentElementId).value;
        var url = "@Url.Action("Snippets", "SVCCTempleFremont")" + "?id=" + snippetsId;
        console.log(window.location.href, url);
        window.location.href = url;
        document.getElementById(documentElementId).value = "";
    }
</script>
