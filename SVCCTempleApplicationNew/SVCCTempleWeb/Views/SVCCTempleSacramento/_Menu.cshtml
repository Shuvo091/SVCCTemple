@{
    string templeFullName = ApplicationInstance.Application["FremontTempleFullName"].ToString();
    string[] actionNames = { "Index", "RegisterUserLoginUser", "Sponsorship", "SankalpamInfo", "ContactUs", "Calendar", "TempleServices", "PoojaItems", "Unsubscribe", "RegisterUserLoginUser", "Snippets", "PicGallery", "AboutUs", "TempleFestivals" };
    string[] controllerNames = { "SVCCTempleFremont", "SVCCTempleFremont", "SVCCTempleFremont", "SVCCTempleFremont", "SVCCTempleFremont", "SVCCTempleFremont", "SVCCTempleFremont", "SVCCTempleFremont", "SVCCTempleFremont", "SVCCTempleFremont", "SVCCTempleFremont", "SVCCTempleFremont", "SVCCTempleFremont", "SVCCTempleFremont" };
    string[] linkTexts = { "Home", "Register", "Sponsorship/<br />Donations", "Sankalpam", "Contact Us", "Calendar", "Services", "Pooja Items", "Unsubscribe", "Login", "Snippets", "Pic Gallery", "About Us", "Festivals" };
}
<img class="img-responsive" src="@ApplicationInstance.Application["FremontImagesBaseURL"]/Dieties/Ganesha_01.jpg" alt="@templeFullName Ganesha Ganapathy Pillaiyar" style="height: auto; max-height: 225px;  max-width: 225px; width: 100%;" title="@templeFullName Ganesha Ganapathy Pillaiyar" /><br />
<table align="left" class="table-responsive" style="background-image: url(@ApplicationInstance.Application["FremontImagesBaseURL"]HomePage/MenuBackground.jpg); background-repeat: no-repeat; height: 693px; margin: 0 auto; width: 225px;">
    <tr>
        <td style="height: 55px; text-align: left;"></td>
        </tr>
    @{
        for (int i = 0; i < controllerNames.Length; i++)
        {
            <tr>
                <td style="padding-bottom: 11px; padding-left: 42px; text-align: left; vertical-align: middle">
                    @{
                        if (actionNames[i] == ViewData["ActionName"].ToString())
                        {
                            <span style="color:#ffffff; font-family:Verdana; font-size:14pt; font-weight:bold; text-decoration:none;">@Html.Raw(linkTexts[i])</span>
                        }
                        else
                        {
                            <a href="@Url.Action(actionNames[i], controllerNames[i])" style="color:#fcc200; font-family: Verdana; font-size: 18px; font-weight: bold; text-decoration: none;">@Html.Raw(linkTexts[i])</a>
                        }
                    }
                </td>
            </tr>
        }
    }
</table>
